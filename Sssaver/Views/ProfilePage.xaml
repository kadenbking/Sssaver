<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="Sssaver.Views.ProfilePage"
    Title="Profile"
    >
    <ContentPage.Content>

        <ScrollView>

            <StackLayout BackgroundColor="{StaticResource Secondary}">

                <Image Source="Icon.png" Margin="10"/>

                <Button
                    BackgroundColor="{StaticResource Primary}"
                    Text="SIGN UP"
                    FontFamily="Saira"
                    FontSize="Title"
                    HeightRequest="60"
                    CornerRadius="12"
                    Margin="50, 10"/>

                <Button
                    BorderColor="{StaticResource Primary}"
                    BorderWidth="3"
                    BackgroundColor="{StaticResource Secondary}"
                    TextColor="{StaticResource Primary}"
                    Text="LOGIN"
                    FontSize="Title"
                    FontFamily="Saira"
                    HeightRequest="60"
                    CornerRadius="12"
                    Margin="50, 10"/>

            </StackLayout>

        </ScrollView>
        
    </ContentPage.Content>
</ContentPage>
